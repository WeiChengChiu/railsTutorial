<h2><%= @event.name %>: Attendee List</h2>

<table class="table">
<% @attendees.each do |a| %>
  <tr>

    <td>
      <%= a.name %>

      <%= link_to "Show", event_attendee_path(@event, a), :class => "btn btn-primary" %>

      <%= link_to "Edit", edit_event_attendee_path(@event, a), :class => "btn btn-default" %>

      <%= link_to "Delete", event_attendee_path(@event, a), :method => :delete, :data => { :confirm => "確定刪除？" }, :class => 'btn btn-danger' %>

    </td>

  </tr>
<% end %>
</table>

<%= link_to "New attendee", new_event_attendee_path(@event), :class => "btn btn-primary" %>